<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Base application theme using Material Components.
        This ensures MaterialCardView and other Material components work properly.
    -->
    <style name="Theme.Luvia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Theme for activities with no action bar -->
    <style name="Theme.Luvia.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Material Components theme for Patient Plans Activity -->
    <style name="Theme.Luvia.PatientPlans" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>