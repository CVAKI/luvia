<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".LoginActivity">

    <!-- ═══════ AMBIENT GLOW top (red radial, breathing pulse) ═══════ -->
    <View
        android:id="@+id/glow_orb_top"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:alpha="0"
        android:background="@drawable/glow_orb_red"
        android:layout_marginTop="-120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ═══════ AMBIENT GLOW bottom-right (orange) ═══════ -->
    <View
        android:id="@+id/glow_orb_bottom"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:alpha="0"
        android:background="@drawable/glow_orb_orange"
        android:layout_marginBottom="-100dp"
        android:layout_marginEnd="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ═══════ FIRE ACCENT LINE — top edge ═══════ -->
    <View
        android:id="@+id/accent_line"
        android:layout_width="0dp"
        android:layout_height="2.5dp"
        android:alpha="0"
        android:background="@drawable/gradient_fire_line"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ═══════ LOGO ═══════ -->
    <ImageView
        android:id="@+id/iv_logo_mark"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:alpha="0"
        android:contentDescription="Luvia logo"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_luvia_forground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <!-- ═══════ APP NAME ═══════ -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:letterSpacing="0.22"
        android:text="LUVIA"
        android:textColor="#FFFFFF"
        android:textSize="56sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_mark" />

    <!-- ═══════ TAGLINE ═══════ -->
    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:letterSpacing="0.06"
        android:text="Your health, brilliantly connected."
        android:textColor="#888888"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <!-- ═══════ FIRE DIVIDER ═══════ -->
    <View
        android:id="@+id/divider_brand"
        android:layout_width="52dp"
        android:layout_height="3dp"
        android:alpha="0"
        android:background="@drawable/gradient_fire_line"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tagline" />

    <!-- ═══════ SIGN-IN CARD ═══════ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_brand">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome back"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in to continue"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginBottom="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
                android:layout_marginBottom="24dp" />

            <!-- Google Sign-In Button -->
            <Button
                android:id="@+id/btn_google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/btn_google_background"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_google"
                android:text="Sign in with Google"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.04" />

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:indeterminateTint="#FD6B26"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ═══════ TERMS ═══════ -->
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="By signing in you agree to our Terms of Service &amp; Privacy Policy"
        android:textColor="#444444"
        android:textSize="11sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_sign_in" />

</androidx.constraintlayout.widget.ConstraintLayout>