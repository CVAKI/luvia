<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".PatientDashboardActivity">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• TOP APP BAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D0D0D"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0D0D0D"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• SCROLLABLE BODY â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• HERO PROFILE CARD â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_hero_card"
                    android:padding="24dp">

                    <!-- Top row: avatar + pulse badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Avatar circle with accent ring -->
                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp">

                            <View
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="@drawable/circle_accent_ring" />

                            <LinearLayout
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_avatar_bg"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:src="@drawable/ic_patient"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="Patient Avatar" />

                            </LinearLayout>

                        </FrameLayout>

                        <!-- Name + email block -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tv_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Patient Name"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:letterSpacing="0.02"
                                tools:text="John Doe" />

                            <TextView
                                android:id="@+id/tv_patient_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email@example.com"
                                android:textSize="12sp"
                                android:textColor="#AAAAAA"
                                android:layout_marginTop="3dp"
                                tools:text="john@gmail.com" />

                            <!-- Patient badge -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ¦ PATIENT"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#FDD92D"
                                android:background="@drawable/badge_yellow_outline"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_marginTop="8dp"
                                android:letterSpacing="0.12" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#33FFFFFF"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Quick stats bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_age_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FDD92D"
                                tools:text="24 yrs" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:textSize="11sp"
                                android:textColor="#888888"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="36dp"
                            android:background="#33FFFFFF" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_blood_group_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#D42221"
                                tools:text="O+" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Blood Group"
                                android:textSize="11sp"
                                android:textColor="#888888"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="36dp"
                            android:background="#33FFFFFF" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_weight_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FD6B26"
                                tools:text="70 kg" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textSize="11sp"
                                android:textColor="#888888"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• SECTION: HEALTH DETAILS â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="#D42221" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="10dp"
                    android:letterSpacing="0.05" />

            </LinearLayout>

            <!-- â”€â”€ Health Details Card â”€â”€ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1A1A1A"
                    android:padding="16dp">

                    <!-- Row 1: Height + Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Height tile -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/tile_dark"
                            android:padding="16dp"
                            android:layout_marginEnd="6dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â†•"
                                android:textSize="22sp"
                                android:textColor="#FD6B26" />

                            <TextView
                                android:id="@+id/tv_height_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="6dp"
                                tools:text="175 cm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="3dp" />

                        </LinearLayout>

                        <!-- Phone tile -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/tile_dark"
                            android:padding="16dp"
                            android:layout_marginStart="6dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â˜Ž"
                                android:textSize="22sp"
                                android:textColor="#FDD92D" />

                            <TextView
                                android:id="@+id/tv_phone_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="6dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                tools:text="+91 9876543210" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="3dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• SECTION: SETTINGS â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="#FD6B26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="10dp"
                    android:letterSpacing="0.05" />

            </LinearLayout>

            <!-- â”€â”€ Settings Card â”€â”€ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1A1A1A">

                    <!-- Language Row -->
                    <LinearLayout
                        android:id="@+id/layout_language_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon bubble -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_bubble_orange"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <!-- Label + value -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alarm Language"
                                android:textSize="13sp"
                                android:textColor="#888888" />

                            <TextView
                                android:id="@+id/tv_language_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="2dp"
                                tools:text="English" />

                        </LinearLayout>

                        <!-- Chevron -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€º"
                            android:textSize="28sp"
                            android:textColor="#444444" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#252525"
                        android:layout_marginStart="72dp" />

                    <!-- Logout Row -->
                    <LinearLayout
                        android:id="@+id/layout_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon bubble -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_bubble_red"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â»"
                                android:textColor="#D42221"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <!-- Label -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign Out"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#D42221" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log out of your account"
                                android:textSize="12sp"
                                android:textColor="#555555"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- Chevron -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€º"
                            android:textSize="28sp"
                            android:textColor="#444444" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• SECTION: OVERVIEW â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="#FDD92D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Overview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="10dp"
                    android:letterSpacing="0.05" />

            </LinearLayout>

            <!-- â”€â”€ Stats Grid â”€â”€ -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- Appointments Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_appointments"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_red"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“…"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointments"
                            android:textSize="11sp"
                            android:textColor="#FFAAAA"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Medical Records Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_records"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_orange"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“‹"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Records"
                            android:textSize="11sp"
                            android:textColor="#FFCC99"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• BOTTOM NAVIGATION â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="#111111"
        app:menu="@menu/menu_patient_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/selector_bottom_nav"
        app:itemTextColor="@drawable/selector_bottom_nav"
        app:elevation="16dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>